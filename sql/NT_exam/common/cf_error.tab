create table CRU.CF_ERROR
(
  error_code      VARCHAR2(50) not null,
  language_code   VARCHAR2(50) not null,
  error_type_code VARCHAR2(50),
  error_message   VARCHAR2(1000),
  tran_date       DATE,
  tran_id         NUMBER(15),
  tran_period     VARCHAR2(10),
  user_code       VARCHAR2(50)
)
tablespace TBS_CRU_DAT
  pctfree 10
  initrans 1
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );
comment on table CRU.CF_ERROR
  is 'This table is a catalog to describe code errors in the module';
comment on column CRU.CF_ERROR.error_code
  is 'Mnemonic code to identify the row';
comment on column CRU.CF_ERROR.language_code
  is 'Mnemonic code to identify the Description language';
comment on column CRU.CF_ERROR.error_type_code
  is 'Classification of error type';
comment on column CRU.CF_ERROR.error_message
  is 'Error description chain';
comment on column CRU.CF_ERROR.tran_date
  is 'Date record was created';
comment on column CRU.CF_ERROR.tran_id
  is 'Transaction identifier';
comment on column CRU.CF_ERROR.tran_period
  is 'Current transaction period';
comment on column CRU.CF_ERROR.user_code
  is 'User identifier for user who entered the record';
alter table CRU.CF_ERROR
  add constraint PK_CF_ERROR primary key (ERROR_CODE, LANGUAGE_CODE)
  using index 
  tablespace TBS_CRU_DAT
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );
grant select on CRU.CF_ERROR to ITF;

