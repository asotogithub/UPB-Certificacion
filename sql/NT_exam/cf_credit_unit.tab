create table CRU.CF_CREDIT_UNIT
(
  credit_unit_id           NUMBER(15) not null,
  telco_code               VARCHAR2(50) not null,
  credit_unit_code         VARCHAR2(50) not null,
  credit_unit_type_code    VARCHAR2(50) not null,
  behavior_type_code       VARCHAR2(50) not null,
  round_method_code        VARCHAR2(50) not null,
  is_currency              VARCHAR2(1) not null,
  integration_other_system VARCHAR2(1),
  rollover_order           VARCHAR2(50) not null,
  start_date               DATE not null,
  end_date                 DATE not null,
  status                   VARCHAR2(1) not null,
  start_tran_id            NUMBER(15) not null,
  start_tran_date          DATE not null,
  start_user_code          VARCHAR2(50) not null,
  end_tran_id              NUMBER(15),
  end_tran_date            DATE,
  end_user_code            VARCHAR2(50)
)
tablespace TBS_CRU_DAT
  pctfree 10
  initrans 1
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );
comment on table CRU.CF_CREDIT_UNIT
  is 'This table is used to store the set of Credit Units';
comment on column CRU.CF_CREDIT_UNIT.credit_unit_id
  is 'Unique Identifier';
comment on column CRU.CF_CREDIT_UNIT.telco_code
  is 'Code of operation';
comment on column CRU.CF_CREDIT_UNIT.credit_unit_code
  is 'Alpha-numeric Credit Unit code';
comment on column CRU.CF_CREDIT_UNIT.credit_unit_type_code
  is '(GENER=Generic, or PROVIS = Provisioned)';
comment on column CRU.CF_CREDIT_UNIT.behavior_type_code
  is '(FREE ,or WON)';
comment on column CRU.CF_CREDIT_UNIT.round_method_code
  is 'Rounding method ';
comment on column CRU.CF_CREDIT_UNIT.is_currency
  is 'Monetary unit (1 = Yes, 0 = No)';
comment on column CRU.CF_CREDIT_UNIT.start_date
  is 'Date on which Credit Unit starts';
comment on column CRU.CF_CREDIT_UNIT.end_date
  is 'Date the Credit Unit ends';
comment on column CRU.CF_CREDIT_UNIT.status
  is 'Credit unit status Active (A) or Inactive (I) ';
comment on column CRU.CF_CREDIT_UNIT.start_tran_id
  is 'Transaction start identifier, it identifies the transaction whose create the record';
comment on column CRU.CF_CREDIT_UNIT.start_tran_date
  is 'Transaction initial date;   is the date whose creates the record';
comment on column CRU.CF_CREDIT_UNIT.start_user_code
  is 'Start user identifier, It is the person or system who creates the record';
comment on column CRU.CF_CREDIT_UNIT.end_tran_id
  is 'Transaction end identifier; it identifies the transaction whose modifies the record';
comment on column CRU.CF_CREDIT_UNIT.end_tran_date
  is 'Transaction end date; is the date whose modifies the record by last time';
comment on column CRU.CF_CREDIT_UNIT.end_user_code
  is 'End user identifier, it identifies to the person or system who modified the record by last time';
alter table CRU.CF_CREDIT_UNIT
  add constraint PK_CF_CREDIT_UNIT primary key (CREDIT_UNIT_ID)
  using index 
  tablespace TBS_CRU_IDX
  pctfree 10
  initrans 2
  maxtrans 255
  storage
  (
    initial 64K
    next 1M
    minextents 1
    maxextents unlimited
  );
grant select on CRU.CF_CREDIT_UNIT to CUS with grant option;
grant select on CRU.CF_CREDIT_UNIT to ITF;
grant select on CRU.CF_CREDIT_UNIT to WEBUSER;

